<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
	 android:id="@+id/nav_graph"
	 app:startDestination="@id/splashFragment">

	 <fragment
		  android:id="@+id/homeFragment"
		  android:name="com.alialfayed.weathertask.ui.home.view.HomeFragment"
		  android:label="HomeFragment"
		  tools:layout="@layout/fragment_home" >
		  <action
			   android:id="@+id/action_homeFragment_to_detailsFragment"
			   app:destination="@id/detailsFragment" />
	 </fragment>
	 <fragment
		  android:id="@+id/splashFragment"
		  android:name="com.alialfayed.weathertask.ui.splash.view.SplashFragment"
		  android:label="SplashFragment"
		  tools:layout="@layout/fragment_splash">

		  <action
			   android:id="@+id/action_splashScreenFragment_to_homeFragment"
			   app:destination="@id/homeFragment"
			   app:popUpTo="@+id/nav_graph"
			   app:popUpToInclusive="true" />

	 </fragment>
	 <fragment
		  android:id="@+id/detailsFragment"
		  android:name="com.alialfayed.weathertask.ui.details.view.CityDetailsFragment"
		  android:label="fragment_details"
		  tools:layout="@layout/fragment_city_details" >
		  <argument
			   android:name="city"
			   app:argType="string" />
		  <argument android:name="id"
			   app:argType="long" />
	 </fragment>

</navigation>